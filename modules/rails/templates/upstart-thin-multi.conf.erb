start on starting <%= @app_name %>-thin
stop on stopping <%= @app_name %>-thin
respawn
env RAILS_ENV="<%= @rails_env %>"
export RAILS_ENV
chdir /u/apps/<%= @app_name %>/current
setuid <%= @app_name %>
setgid <%= @app_name %>

exec <%= @bundle_exec %> thin -e <%= @rails_env %> -S /u/apps/<%= @app_name %>/shared/thin.<%= @app_server_id %>.sock start
