start on starting <%= @app_name %>
stop on stopping <%= @app_name %>
respawn

env RAILS_ENV="<%= @rails_env %>"
export RAILS_ENV
env PIDFILE="/u/apps/<%= @app_name %>/shared/pids/resque.pid"
export PIDFILE
env QUEUE='*'
export QUEUE
env COUNT=2
export COUNT

setuid <%= @app_name %>
setgid <%= @app_name %>
chdir /u/apps/<%= @app_name %>/current

exec <%= @bundle_exec %> rake environment resque:work
