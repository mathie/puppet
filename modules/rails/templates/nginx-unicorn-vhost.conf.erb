server {
  listen 80 default;

  root /u/apps/<%= @app_name %>/current/public;

  location / {
    try_files $uri/index.html $uri.html $uri @<%= @app_name %>;
  }

  location @<%= @app_name %> {
    proxy_set_header Host $http_host;
    proxy_redirect off;
    proxy_pass http://<%= @app_name %>_<%= @hostname %>_unicorn;
  }
}
