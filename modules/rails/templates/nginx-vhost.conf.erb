server {
  listen 80 default;
  <% if @domain == 'vagrant.vm' %>
    listen 8090;
  <% end %>

  root /u/apps/<%= @app_name %>/current/public;

  location / {
    try_files $uri/index.html $uri.html $uri @<%= @app_name %>;
  }

  location @<%= @app_name %> {
    proxy_pass http://<%= @app_name %>_<%= @hostname %>_<%= @rails_env %>;
  }
}
