<%= @log_file %> {
  <%= @frequency %>
  missingok
  rotate <%= @keep %>
  compress
  delaycompress
  notifempty
  <% if @owner && @group && @mode -%>
    create <%= @mode %> <%= @owner %> <%= @group %>
    sharedscripts
  <% else -%>
    copytruncate
  <% end %>

  <% if @prerotate -%>
    prerotate
      <%= @prerotate %>
    endscript
  <% end -%>

  <% if @postrotate -%>
    postrotate
      <%= @postrotate %>
    endscript
  <% end -%>
}
