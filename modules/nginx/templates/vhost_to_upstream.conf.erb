server {
  listen <%= @main_port %>;
  <% if scope.function_str2bool([@vagrant]) && @vagrant_additional_port -%>
    listen <%= @vagrant_additional_port %>;
  <% end -%>
  <% if @additional_port -%>
    listen <%= @additional_port %>;
  <% end -%>

  <%= scope.function_template(['nginx/vhost_to_upstream_common.conf.erb']) %>
}
